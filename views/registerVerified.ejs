<%- include('./partials/header.ejs') %>
<div class="overlay"></div>
    <main class="main-wrapper active">
		<section class="signin-section">
			<div class="container-fluid">
				<div class="title-wrapper pt-30">
					<div class="row align-items-center">
						<div class="col-md-12">
							<div class="title mb-30">
								<center><h2>Register as a Verified User</h2></center>
							</div>
						</div>
					</div>
				</div>
				<div class="row g-0 auth-row">
					<div class="col-lg-6">
						<div class="auth-cover-wrapper bg-primary-100">
							<div class="auth-cover">
								<div class="title text-center">
									<h1 class="text-primary mb-10">Register as a Verified User</h1>
									<p class="text-medium">
										Register for a Verified account so you can help people
									</p>
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="signin-wrapper">
							<div class="form-wrapper">
								<form class="user" enctype = "multipart/form-data" action="/user/getverified" method='POST'>
									<div class="row">
										<div class="col-12">
											<div class="input-style-1">
												<label>Phone</label>
												<input type="tel" class="form-control form-control-user" id="phone" name="phone" placeholder="Your Phone Number Here" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
												<div class="form-text">Please add your phone number in this format: 999-999-9999</div>
											</div>
										</div>
										<div class="select-style-1">
											<div class="select-position">
												<label>Account Type</label>
												<select name="type" id="type">
													<option value="hospital">Hospital</option>
													<option value="influencer">Influencer</option>
													<option value="organization">Organization</option>
												</select>
											</div>
										</div>
										<div class="col-12">
											<div class="input-style-1">
												<label>Instagram Handle</label>
												<input type="text" class="form-control form-control-user" id="insta" placeholder="Your Instagram Handle" name="insta">
											</div>
										</div>
										<div class="col-12">
											<div class="input-style-1">
												<label>Facebook Handle</label>
												<input type="text" class="form-control form-control-user" id="facebook" placeholder="Your Facebook Handle" name="facebook">
											</div>
										</div>
										<div class="col-12">
											<div class="input-style-1">
												<label>Tiktok Handle</label>
												<input type="text" class="form-control form-control-user" id="tiktok" placeholder="Your Tiktok Handle" name="tiktok">
											</div>
										</div>
										<div class="col-12">
											<div class="mb-3">
												<label for="file" class="form-label">Add Documents</label>
												<input class="form-control" type="file" id="file" name="file" multiple>
												<div class="form-text">Please upload some documents to prove your identity.</div>
											</div>
										</div>
										<input type="hidden" id="url" name="url">
										<div class="col-12">
											<div class="button-group d-flex justify-content-center flex-wrap">
												<button type="submit" class="main-btn primary-btn btn-hover w-100 text-center">Continue</button>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</div>
<script>
	var getUrl = window.location;
	var baseUrl = getUrl .protocol + "//" + getUrl.host + "/" + "documents/";
	document.getElementById("url").value = baseUrl;
</script>
<%- include('./partials/footer.ejs') %>